def soma():
  x = float(input("Digite o primeiro valor: "))
  y = float(input("Digite o segundo valor: "))
  return x+y

def subtracao():
    x = float(input("Digite o primeiro valor: "))
    y = float(input("Digite o segundo valor: "))
    return x-y

def multiplicacao():
  x = float(input("Digite o primeiro valor: "))
  y = float(input("Digite o segundo valor: "))
  return x*y


def divisao():
  x = float(input("Digite o primeiro valor: "))
  y = float(input("Digite o segundo valor: "))
  if y != 0:
      return x/y

  else:
      return "Erro: Não é possível dividir por 0 (zero)!"


def calculadora():
    while True:
      print("\nCalculadora Básica das 4 operações")
      print("\t1.Soma")
      print("\t2.Subtração")
      print("\t3.Multiplicação")
      print("\t4.Divisão")
      print("\t5.Sair\n")

      escolha = int(input("Qual operação deseja realizar? "))


      if escolha == 1:
          print("Resultado: ", soma())

      elif escolha == 2:
          print("Resultado: ", subtracao())

      elif escolha == 3:
          print("Resultado: ", multiplicacao())

      elif escolha == 4:
          print("Resultado: ", divisao())

      elif escolha == 5:
        print("Saindo da calculadora...")
        break

      else:
          print("Erro, escolha uma opção valida")



calculadora()